---
import { projects } from "../../config/projects.json";
// console.log(projects);
---

<section>
  <h2 class="font-bold text-5xl text-center my-8">Projects</h2>
  <div>
    {
      projects.map((project) => (
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
          <div class="flex-1 p-4">
            <h2 class="text-2xl font-bold my-4">{project.title}</h2>
            <p class="m-y-2">{project.description}</p>
            <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
              More info
              </button>
          </div>
          <div class="flex-1">
            <img src={project.image} alt="" class="w-72 m-auto" />
          </div>
        </div>
      ))
    }
  </div>
</section>
